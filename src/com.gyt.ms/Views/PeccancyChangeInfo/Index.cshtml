@using System.Diagnostics
@using Zer.GytDto
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var truckList = ViewBag.TruckList as List<TruckInfoDto>;
    var companyList = ViewBag.CompanyList as List<CompanyInfoDto>;
    var infoList = ViewBag.Result as List<PeccancyRecrodDto>;
}

<div class="div-inline">
    <div class="input-group col-xs-5">
        <span>查询时间：</span>
        <span class="input-group-addon">
            <i class="icon-calendar bigger-110"></i>
        </span>

        <input class="form-control" type="text" name="date-range-picker" id="id-date-range-picker-1">
    </div>
    <div>
        <button type="submit" class="btn btn-small btn-info icon-search" style="margin-left: 20px; height: 34px; border: none">查询</button>
    </div>
</div>


<div class="div-inline">
    <div class="div-inline" style="height: 50px; line-height: 45px">
        <span style="margin-left: 10px">公司名称：</span>
        <select class=" chosen-select" style="display: none; width: 200px" id="select_company">
            <option value="">&nbsp;</option>
            @{
                Debug.Assert(companyList != null, "companyList != null");
            }
            @foreach (var companyInfoDto in companyList)
            {
                <option value="@companyInfoDto.Id">@companyInfoDto.CompanyName</option>
            }
        </select>
        车牌号码：
        <select class="chosen-select " style="display: none; width: 105px" id="select_truck">
            <option value="">&nbsp;</option>
            @{
                Debug.Assert(truckList != null, "truckList != null");
            }
            @foreach (var truckInfoDto in truckList)
            {
                <option value="@truckInfoDto.Id">@truckInfoDto.FrontTruckNo</option>
            }
        </select>


    </div>

</div>

<div class="table-header" style="margin-top: 20px">

    <div class="visible-sm visible-md hidden-sm hidden-xs action-buttons">

        <a class="white" id="btn_export" href="@(Url.Action("Export","PeccancyChangeInfo",new {exportcode="All"}))">
            <i class="icon-cloud-download bigger-110">
                <span class="">导出</span>
            </i>
        </a>
    </div>

</div>

<div class="table-responsive">
    <table id="sample-table-2" class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th class="center">
                <label>
                    <input type="checkbox" class="ace"/>
                    <span class="lbl"></span>
                </label>
            </th>
            <th>超限超载编号</th>
            <th>公司名称</th>
            <th>前车牌号</th>
            <th>后车牌号</th>
            <th>所属行业</th>
            <th>驾驶员姓名</th>
            <th>违法日期</th>
            <th>违法事项</th>
            <th>总重（吨）</th>
            <th>轴数</th>
            <th>文件来源</th>
        </tr>
        </thead>
        <tbody>

        @{
            Debug.Assert(infoList != null, "infoList != null");
        }
        @foreach (var overloadRecrodDto in infoList)
        {
            <tr>
                <td class="center">
                    <label>
                        <input type="checkbox" class="ace"/>
                        <span class="lbl"></span>
                    </label>
                </td>
                <td>
                    <a href="javascript:;">@overloadRecrodDto.Id</a>
                </td>
                <td>@overloadRecrodDto.CompanyName</td>
                <td>
                    <span class="label label-sm label-warning">@overloadRecrodDto.FrontTruckNo</span>
                </td>
                <td>
                    <span class="label label-sm label-warning">@overloadRecrodDto.BehindTruckNo</span>
                </td>
                <td>@overloadRecrodDto.TraderRange</td>
                <td>@overloadRecrodDto.DriverName</td>
                <td>
                    @overloadRecrodDto.PeccancyDate
                </td>
                <td>@overloadRecrodDto.PeccancyMatter</td>
                <td>@overloadRecrodDto.GrossWeight</td>
                <td>@overloadRecrodDto.AxisNumber</td>
                <td>@overloadRecrodDto.Source</td>
            </tr>
        }
        </tbody>
    </table>

    <div class="row">
        <div class="col-sm-12">
            <div class="dataTables_paginate padding-10">
                <ul class="pagination">
                    <li class="prev disabled">
                        <a href="#">
                            <i class="icon-double-angle-left"></i>
                        </a>
                    </li>
                    <li class="active">
                        <a href="#">1</a>
                    </li>
                    <li>
                        <a href="#">2</a>
                    </li>
                    <li>
                        <a href="#">3</a>
                    </li>
                    <li class="next">
                        <a href="#">
                            <i class="icon-double-angle-right"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script src="@Url.Content("~")assets/js/jquery.dataTables.min.js"></script>
    <script src="@Url.Content("~")assets/js/jquery.dataTables.bootstrap.js"></script>
    <script src="@Url.Content("~")assets/js/date-time/bootstrap-datepicker.min.js"></script>
    <script src="@Url.Content("~")assets/js/chosen.jquery.min.js"></script>
    <script src="@Url.Content("~")assets/js/date-time/daterangepicker.min.js"></script>
    <script src="@Url.Content("~")assets/js/date-time/moment.min.js"></script>


    <script type="text/javascript">
        jQuery(function($) {
            $('input[name=date-range-picker]')
                .daterangepicker()
                .prev()
                .on(ace.click_event,
                    function() {
                        $(this).next().focus();
                    });


            $(".chosen-select").chosen();


            $('#modal-form input[type=file]')
                .ace_file_input({
                    style: 'well',
                    btn_choose: 'Drop files here or click to choose',
                    btn_change: null,
                    no_icon: 'icon-cloud-upload',
                    droppable: true,
                    thumbnail: 'large'
                });


            $('#modal-form')
                .on('shown.bs.modal',
                    function() {
                        $(this)
                            .find('.chosen-container')
                            .each(function() {
                                $(this).find('a:first-child').css('width', '210px');
                                $(this).find('.chosen-drop').css('width', '210px');
                                $(this).find('.chosen-search input').css('width', '200px');
                            });
                    });

        });

        $(function() {
            $("#btn_export")
                .click(function() {

                    var ids = [];
                    var index = 0;

                    var tbodyObj = document.getElementById('tb_Info');
                    $("table :checkbox")
                        .each(function(key, value) {
                            if ($(value).prop('checked')) {
                                ids[index] = tbodyObj.rows[key].cells[1].innerHTML;
                                index++;
                            }
                        });

                    if (ids.length > 0) {
                        exportRequst(ids);
                    }
                });

            function exportRequst(ids) {
                $.ajax({
                    type: "POST",
                    url: "@Url.Action("Export")",
                    data: { ids: ids },
                    dataType: "json",
                    success: function(data) {
                        alert("数据导出成功！");
                    }
                });
            }
        });
    </script>


}
