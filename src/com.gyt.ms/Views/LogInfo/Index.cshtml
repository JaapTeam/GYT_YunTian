@using Zer.GytDto
@using Zer.GytDto.SearchFilters

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var dataList = ViewBag.Result as List<LogInfoDto>;

    var filter = ViewBag.Filter as LogInfoSearchDto;
}

<h3 class="header smaller lighter blue">日志管理</h3>

<form class="form-inline" id="form_search" style="height: 50px; line-height: 45px" action="@(Url.Action("Index", "LogInfo"))" method="post">
   
    <input type="text" class="hidden" name="PageIndex" id="input_pageIndex"/>
    <button type="submit" class="hidden" id="btn_submit" style="margin-left: 20px"></button>
</form>

<div class="table-header">

    <div class="visible-sm visible-md hidden-sm hidden-xs action-buttons">
        <a class="white" id="btn_export">
            <i class="icon-cloud-download bigger-110">
                <span class="">导出</span>
            </i>
        </a>
    </div>

</div>
<div class="table-responsive">
    <table id="tb_Info" class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th class="center">
                    <label>
                        <input type="checkbox" class="ace">
                        <span class="lbl"></span>
                    </label>
                </th>
                <th>序号</th>
                <th>用户</th>
                <th>操作类型</th>
                <th>操作模块</th>
                <th>发生时间</th>
                <th>日志内容</th>
            </tr>
        </thead>

        <tbody>
            @{
                if (dataList == null || dataList.Count <= 0)
                {
                    <tr><td>未查询到任何记录！</td></tr>
                }
                else
                {
                    foreach (var log in dataList)
                    {
                        <tr>
                            <td class="center">
                                <label>
                                    <input type="checkbox" class="ace">
                                    <span class="lbl"></span>
                                </label>
                            </td>
                            <td>@log.Id</td>
                            <td>
                                <a href="@Url.Action("AccountInfo", "User", new { userId = log.UserId, })">@log.DisplayName</a>
                            </td>
                            <td>@log.ActionType</td>
                            <td>@log.ActionModel</td>
                            <td>@string.Format("{0:yyyy-MM-dd hh:mm:ss}", log.CreateTime)</td>
                            <td>
                                <a href="@(Url.Action("LogInfo","LogInfo",new {logId=log.Id}))">详细</a>
                            </td>
                        </tr>
                    }
                }

            }
        </tbody>
    </table>

    		 
    @if (filter.PageCount > 1)
    {
        <div class="row">
            <div class="col-sm-12">
                <div class="dataTables_paginate padding-10">
                    <ul class="pagination">

                        <li class="prev @(filter.PageIndex == 1?"disabled":"")">
                            <a class="__page" href="javascript:;" data-pageindex='1'>
                                <i class="icon-double-angle-left"></i>
                            </a>
                        </li>
                        @for (int i = 1; i <= filter.PageCount; i++)
                        {
                            <li class="@(filter.PageIndex == i?"active":"")">
                                <a class="__page" href="javascript:;" data-pageindex='@i'>@i</a>
                            </li>
                        }
                        <li class="next  @(filter.PageIndex == filter.PageCount?"disabled":"")">
                            <a class="__page" href="javascript:;" data-pageindex='@filter.PageCount'>
                                <i class="icon-double-angle-right"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    }
</div>

@section scripts{


    <script type="text/javascript">
        $(function() {

            $("#btn_export")
                .click(function() {

                    var ids = [];
                    var index = 0;

                    var tbodyObj = document.getElementById('tb_Info');
                    $("table :checkbox")
                        .each(function(key, value) {
                            if ($(value).prop('checked')) {
                                ids[index] = tbodyObj.rows[key].cells[1].innerHTML;
                                index++;
                            }
                        });

                    if (ids.length > 0) {
                        exportRequst(ids);
                    }
                });

            function exportRequst(ids) {
                $.ajax({
                    type: "POST",
                    url: "@Url.Action("Export")",
                    data: { ids: ids},
                    dataType: "json",
                    success: function (data) {
                        alert("数据导出成功！");
                    }
                });
            }
        })
    </script>

    <script>
        $(function() {
            $('body').on('click', '.__page', function () {
                var pageIndex = $(this).attr('data-pageindex');
                $('#input_pageIndex').val(pageIndex);
                $('#btn_submit').click();
            })
        })
    </script>
}